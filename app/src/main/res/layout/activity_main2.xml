<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/realcontent"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <fragment
            android:id="@+id/tab1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:name="com.cxwl.agriculture.fragement.HomeFragment"
            />

        <fragment
            android:id="@+id/tab2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:name="com.cxwl.agriculture.fragement.AskPriceFragment"
            />

        <fragment
            android:id="@+id/tab3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:name="com.cxwl.agriculture.fragement.WeatherFragment"
            />

        <fragment
            android:id="@+id/tab4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:name="com.cxwl.agriculture.fragement.UploadWeatherFragment"
            />

        <fragment
            android:id="@+id/tab5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:name="com.cxwl.agriculture.fragement.AboutFragment"
            />

        </FrameLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="首页"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="问菜价"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="当地天气"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="农情信息"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="关于我们"
            android:gravity="center"
            />

    </LinearLayout>
</LinearLayout>
