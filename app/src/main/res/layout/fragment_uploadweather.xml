<?xml version="1.0" encoding="utf-8"?>
<me.dreamheart.autoscalinglayout.ASLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    custom:designWidth="384dp"
    custom:designHeight="575dp"
    custom:autoScaleEnable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/static_01"
    android:orientation="vertical"
    android:padding="15dp"
    >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/weizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前位置"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_big2"
            />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京市朝阳区建外soho"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_smaller"
            android:layout_toRightOf="@id/weizhi"
            android:layout_alignBaseline="@id/weizhi"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/nq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="农情信息"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_big2"
            android:layout_below="@id/weizhi"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/nq_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nq"
            android:layout_marginTop="10dp"
            android:hint="当地玉米涨势良好"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/weatheris"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="现在的天气是？"
            android:textSize="@dimen/text_size_big2"
            android:textColor="@android:color/white"
            android:layout_below="@id/nq_content"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>

    <GridView
        android:id="@+id/gridview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numColumns="4"
        android:scrollbars="none"
        android:listSelector="@android:color/transparent"
        android:choiceMode="singleChoice"
        android:layout_marginTop="10dp"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/img"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/qiya"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/qy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="气压"
            android:textSize="@dimen/text_size_small"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@id/img"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/qiya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0hPa"
            android:textSize="@dimen/text_size_smaller"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@id/img"
            android:layout_below="@id/qy"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/tishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="（数据来源于手机传感器，仅供参考）"
            android:textColor="@android:color/white"
            android:layout_below="@id/img"
            android:layout_marginLeft="10dp"
            />

    </RelativeLayout>

</me.dreamheart.autoscalinglayout.ASLinearLayout>
