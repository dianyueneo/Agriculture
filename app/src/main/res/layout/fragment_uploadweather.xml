<?xml version="1.0" encoding="utf-8"?>
<com.xn121.scjg.nmt.scaleview.ScaleLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/static_01"
    android:orientation="vertical"
    >

    <com.xn121.scjg.nmt.scaleview.ScaleRelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_blue_500"
        >

        <com.xn121.scjg.nmt.scaleview.ScaleTextView
            android:id="@+id/toolbartitle"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_big"
            android:text="农情信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            />

        <com.xn121.scjg.nmt.scaleview.ScaleTextView
            android:id="@+id/tijiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textSize="@dimen/text_size_small"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            />
    </com.xn121.scjg.nmt.scaleview.ScaleRelativeLayout>

    <com.xn121.scjg.nmt.scaleview.ScaleRelativeLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >

        <com.xn121.scjg.nmt.scaleview.ScaleTextView
            android:id="@+id/weizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前位置"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_big2"
            />

        <com.xn121.scjg.nmt.scaleview.ScaleTextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京市朝阳区建外soho"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_smaller"
            android:layout_toRightOf="@id/weizhi"
            android:layout_alignBaseline="@id/weizhi"
            android:layout_marginLeft="10dp"
            />

        <com.xn121.scjg.nmt.scaleview.ScaleTextView
            android:id="@+id/nq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="农情信息"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_big2"
            android:layout_marginTop="10dp"
            android:layout_below="@id/weizhi"
            />

        <com.xn121.scjg.nmt.scaleview.ScaleEditText
            android:id="@+id/nq_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请添加描述，最多输入六十个字符"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:layout_below="@id/nq"
            android:layout_marginTop="5dp"
            />

        <com.xn121.scjg.nmt.scaleview.ScaleTextView
            android:id="@+id/weatheris"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="现在的天气是？"
            android:textSize="@dimen/text_size_big2"
            android:textColor="@android:color/white"
            android:layout_below="@id/nq_content"
            android:layout_marginTop="10dp"
            />

        <com.xn121.scjg.nmt.scaleview.ScaleTextView
            android:id="@+id/weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_smaller"
            android:textColor="@android:color/white"
            android:layout_below="@id/weizhi"
            android:layout_toRightOf="@id/weatheris"
            android:layout_marginTop="15dp"
            android:layout_alignBaseline="@id/weatheris"
            android:layout_marginLeft="5dp"
            />

    </com.xn121.scjg.nmt.scaleview.ScaleRelativeLayout>

    <com.xn121.scjg.nmt.scaleview.ScaleGridView
        android:id="@+id/gridview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numColumns="4"
        android:scrollbars="none"
        android:listSelector="@android:color/transparent"
        android:choiceMode="singleChoice"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        />



    <com.xn121.scjg.nmt.scaleview.ScaleRelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        >
        <com.xn121.scjg.nmt.scaleview.ScaleImageView
            android:id="@+id/img"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/qiya"
            />

        <com.xn121.scjg.nmt.scaleview.ScaleTextView
            android:id="@+id/qy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="气压"
            android:textSize="@dimen/text_size_small"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@id/img"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />

        <com.xn121.scjg.nmt.scaleview.ScaleTextView
            android:id="@+id/qiya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0hPa"
            android:textSize="@dimen/text_size_smaller"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@id/img"
            android:layout_below="@id/qy"
            android:layout_marginLeft="10dp"
            />

        <com.xn121.scjg.nmt.scaleview.ScaleTextView
            android:id="@+id/tishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="（数据来源于手机传感器，仅供参考）"
            android:textColor="@android:color/white"
            android:layout_below="@id/img"
            />

    </com.xn121.scjg.nmt.scaleview.ScaleRelativeLayout>

</com.xn121.scjg.nmt.scaleview.ScaleLinearLayout>
