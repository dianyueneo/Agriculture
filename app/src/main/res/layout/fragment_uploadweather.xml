<?xml version="1.0" encoding="utf-8"?>
<me.dreamheart.autoscalinglayout.ASRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    custom:designWidth="384dp"
    custom:designHeight="575dp"
    custom:autoScaleEnable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    >

    <TextView
        android:id="@+id/weizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前位置"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_big"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京市朝阳区建外soho"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_smaller"
        android:layout_toRightOf="@id/weizhi"
        android:layout_alignBaseline="@id/weizhi"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/nq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="农情信息"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_big"
        android:layout_below="@id/weizhi"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/nq_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nq"
        android:layout_marginTop="20dp"
        android:hint="当地玉米涨势良好"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/weatheris"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="现在的天气是？"
        android:textSize="@dimen/text_size_big"
        android:textColor="@android:color/white"
        android:layout_below="@id/nq_content"
        android:layout_marginTop="20dp"
        />

    <RadioGroup
        android:id="@+id/weatherbutton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/weatheris"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/weather00"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/cloudy_red"
                android:button="@null"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="多云"
                android:tag="00"
                />

            <RadioButton
                android:id="@+id/weather01"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/cloudy_red"
                android:button="@null"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="多云"
                android:tag="01"
                />
            <RadioButton
                android:id="@+id/weather02"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/cloudy_red"
                android:button="@null"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="多云"
                android:tag="02"
                />
            <RadioButton
                android:id="@+id/weather03"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/cloudy_red"
                android:button="@null"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="多云"
                android:tag="03"
                />
            <RadioButton
                android:id="@+id/weather04"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/cloudy_red"
                android:button="@null"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="多云"
                android:tag="04"
                />
            <RadioButton
                android:id="@+id/weather05"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/cloudy_red"
                android:button="@null"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="多云"
                android:tag="05"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <RadioButton
                android:id="@+id/weather06"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/cloudy_red"
                android:button="@null"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="多云"
                android:tag="06"
                />

            <RadioButton
                android:id="@+id/weather07"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/cloudy_red"
                android:button="@null"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="多云"
                android:tag="07"
                />
            <RadioButton
                android:id="@+id/weather08"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/cloudy_red"
                android:button="@null"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="多云"
                android:tag="08"
                />
            <RadioButton
                android:id="@+id/weather09"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/cloudy_red"
                android:button="@null"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="多云"
                android:tag="09"
                />
            <RadioButton
                android:id="@+id/weather10"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/cloudy_red"
                android:button="@null"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="多云"
                android:tag="10"
                />
            <RadioButton
                android:id="@+id/weather11"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/cloudy_red"
                android:button="@null"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="多云"
                android:tag="11"
                />

        </LinearLayout>

    </RadioGroup>

    <ImageView
        android:id="@+id/img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/cloud_green"
        android:layout_below="@id/weatherbutton"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/qy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="气压"
        android:textSize="@dimen/text_size_small"
        android:textColor="@android:color/white"
        android:layout_toRightOf="@id/img"
        android:layout_below="@id/weatherbutton"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/qiya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0hPa"
        android:textSize="@dimen/text_size_smaller"
        android:textColor="@android:color/white"
        android:layout_toRightOf="@id/img"
        android:layout_below="@id/qy"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/tishi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="（数据来源于手机传感器，仅供参考）"
        android:textColor="@android:color/white"
        android:layout_below="@id/img"
        android:layout_marginLeft="10dp"
        />


</me.dreamheart.autoscalinglayout.ASRelativeLayout>
