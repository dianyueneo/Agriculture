<?xml version="1.0" encoding="utf-8"?>
<com.xn121.scjg.nmt.scaleview.ScaleRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:padding="10dp"
    >

    <com.xn121.scjg.nmt.scaleview.ScaleImageView
        android:id="@+id/img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/green_title"
        />

    <com.xn121.scjg.nmt.scaleview.ScaleTextView
        android:id="@+id/pf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全国平均批发价:"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_smaller2"
        android:layout_toRightOf="@id/img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        />

    <com.xn121.scjg.nmt.scaleview.ScaleTextView
        android:id="@+id/qgpfj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.9元/公斤"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_smaller2"
        android:layout_toRightOf="@id/pf"
        android:layout_marginTop="20dp"
        />

    <com.xn121.scjg.nmt.scaleview.ScaleTextView
        android:id="@+id/ls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="参考零售价:"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_smaller2"
        android:layout_toRightOf="@id/img"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/pf"
        />

    <com.xn121.scjg.nmt.scaleview.ScaleTextView
        android:id="@+id/lsj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.8~4.7元/公斤"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_smaller2"
        android:layout_toRightOf="@id/ls"
        android:layout_below="@id/pf"
        />

</com.xn121.scjg.nmt.scaleview.ScaleRelativeLayout>
