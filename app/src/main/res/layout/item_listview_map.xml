<?xml version="1.0" encoding="utf-8"?>
<com.xn121.scjg.nmt.scaleview.ScaleRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <com.xn121.scjg.nmt.scaleview.ScaleImageView
        android:id="@+id/progress"
        android:layout_width="22dp"
        android:layout_height="116dp"
        android:src="@drawable/progress_green"/>

    <com.xn121.scjg.nmt.scaleview.ScaleRelativeLayout
        android:id="@+id/qd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/progress"
        android:layout_marginLeft="8dp"
        >

        <com.xn121.scjg.nmt.scaleview.ScaleTextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/material_blue_500"
            android:text="1"
            android:textSize="@dimen/sp20"
            />

        <com.xn121.scjg.nmt.scaleview.ScaleTextView
            android:id="@+id/qidian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/material_blue_500"
            android:text=".起点:"
            android:textSize="@dimen/sp20"
            android:layout_toRightOf="@id/number"
            />

        <com.xn121.scjg.nmt.scaleview.ScaleTextView
            android:id="@+id/market_qidian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/qidian"
            android:text="北京"
            android:textSize="@dimen/sp20"
            android:textColor="@color/material_blue_500"
            />

    </com.xn121.scjg.nmt.scaleview.ScaleRelativeLayout>

    <com.xn121.scjg.nmt.scaleview.ScaleRelativeLayout
        android:id="@+id/zd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/progress"
        android:layout_below="@id/qd"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="5dp"
        >

        <com.xn121.scjg.nmt.scaleview.ScaleTextView
            android:id="@+id/zhongdian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="终点:"
            android:textSize="@dimen/sp20"
            android:textColor="@color/material_blue_500"
            />

        <com.xn121.scjg.nmt.scaleview.ScaleTextView
            android:id="@+id/market_zhongdian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京"
            android:textSize="@dimen/sp20"
            android:textColor="@color/material_blue_500"
            android:layout_toRightOf="@id/zhongdian"
            />
    </com.xn121.scjg.nmt.scaleview.ScaleRelativeLayout>

    <com.xn121.scjg.nmt.scaleview.ScaleRelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/zd"
        android:layout_toRightOf="@id/progress"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="18dp"
        >
        <com.xn121.scjg.nmt.scaleview.ScaleTextView
            android:id="@+id/lirun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="估计利润:"
            android:textSize="@dimen/sp20"
            android:textColor="@color/grey"
            />

        <com.xn121.scjg.nmt.scaleview.ScaleTextView
            android:id="@+id/profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:text="10700.00"
            android:textSize="@dimen/sp20"
            android:layout_toRightOf="@id/lirun"
            />

    </com.xn121.scjg.nmt.scaleview.ScaleRelativeLayout>




</com.xn121.scjg.nmt.scaleview.ScaleRelativeLayout>
